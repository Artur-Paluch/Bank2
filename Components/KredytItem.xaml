<UserControl x:Class="Bank2.Components.KredytItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bank2.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="{Binding Id_Kredytu}"/>
        <TextBlock Text="{Binding KlientImie }"/>
        <TextBlock Text="{Binding KlientNazwisko}"/>
        <TextBlock Text="{Binding Rodzaj_kredytu}"/>
        <TextBlock Text="{Binding Kwota_kredytu }"/>
        <TextBlock Text="{Binding Oprocentowanie }"/>
        <TextBlock Text="{Binding Data_założenia}"/>
        <TextBlock Text="{Binding ImiePracownika }"/>
        <TextBlock Text="{Binding NazwiskoPracownika }"/>
    </StackPanel>
</UserControl>
