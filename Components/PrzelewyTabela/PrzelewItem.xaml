<UserControl x:Class="Bank2.Components.PrzelewItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bank2.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <CheckBox IsChecked="{Binding IsSelected}"/>
        <TextBlock Text="{Binding Id_Przelewu}"/>
        <TextBlock Text="{Binding NadawcaImię}"/>
        <TextBlock Text="{Binding NadawcaNazwisko}"/>
        <TextBlock Text="{Binding Nazwa_odbiorcy}"/>
        <TextBlock Text="{Binding Tytuł_przelewu}"/>
        <TextBlock Text="{Binding Kwota}"/>
        <TextBlock Text="{Binding Data}"/>
        <TextBlock Text="{Binding Numer_rachunku_odbiorcy}"/>
    </StackPanel>
</UserControl>
