        <TextBlock  Style="{DynamicResource TextBlockNaglowekDefaultStyle}" Text="Kwota" Width="150"/>
        <TextBlock  Style="{DynamicResource TextBlockNaglowekDefaultStyle}" Text="Data" Width="200"/>
        <TextBlock  Style="{DynamicResource TextBlockNaglowekDefaultStyle}" Text="Numer rachunku odbiorcy" Width="auto"/>
