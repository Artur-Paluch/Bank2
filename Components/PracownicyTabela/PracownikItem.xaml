<UserControl x:Class="Bank2.Components.PracownikItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bank2.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <CheckBox IsChecked="{Binding IsSelected}"/>
        <TextBlock Text="{Binding Id_Pracownika}"  />
        <TextBlock Text="{Binding Imię_pracownika}" />
        <TextBlock Text="{Binding Nazwisko_pracownika}" />
        <TextBlock Text="{Binding Data_zatrudnienia , StringFormat=Date: {0:dddd, MMMM dd}}" />
        <TextBlock Text="{Binding PESEL}" />
        <TextBlock Text="{Binding Telefon}" />
    </Grid>
</UserControl>
